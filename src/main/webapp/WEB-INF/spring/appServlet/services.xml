<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:mvc="http://www.springframework.org/schema/mvc"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-3.0.xsd
    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:property-placeholder location="classpath:categolj.properties" />

    <!-- Dao -->
    <import resource="dao/mongodb.xml" />

    <!-- Entry -->
    <bean
        class="am.ik.categolj.app.common.service.impl.mongodb.MongoEntryService" />

    <bean
        class="am.ik.categolj.app.common.service.impl.mongodb.MongoLinkService" />

    <!-- Uploader -->
    <mvc:resources mapping="/upload/*/*" location="${categolj.upload.dir}/" />
    <bean
        class="am.ik.categolj.app.admin.service.impl.local.LocalUploaderService">
        <property name="uploadDir" value="${categolj.upload.dir}" />
    </bean>

    <!-- Pager -->
    <bean class="am.ik.categolj.app.blog.service.impl.DefaultPagerService" />

    <!-- Authentication -->
    <bean
        class="am.ik.categolj.app.common.service.impl.DefaultAuthenticationService" />

    <bean class="am.ik.categolj.common.fw.support.igo.TaggerFactoryBean">
        <property name="dictDir" value="${categolj.mecab.dict.dir}" />
    </bean>

    <!-- Entry Search -->
    <bean
        class="am.ik.categolj.app.blog.service.impl.mongodb.MongoEntrySearchService" />

    <!-- Amazon -->
    <bean class="am.ik.aws.apa.AwsApaRequesterImpl">
        <constructor-arg name="endpoint" value="${categolj.aws.endpoint}" />
        <constructor-arg name="accessKeyId"
            value="${categolj.aws.accesskey.id}" />
        <constructor-arg name="secretAccessKey"
            value="${categolj.aws.secret.accesskey}" />
        <constructor-arg name="associateTag"
            value="${categolj.aws.associate.tag}" />
        <property name="retryCount" value="0" />
    </bean>

    <bean
        class="am.ik.categolj.app.admin.service.impl.AmazonProductServiceImpl" />
</beans>
