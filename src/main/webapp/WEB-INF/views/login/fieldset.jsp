<fieldset>
    <div class="control-group">
        <label class="control-label" for="j_username">Username : </label>
        <div class="controls">
            <input name="j_username" id="j_username">
        </div>
    </div>
    <div class="control-group">
        <label class="control-label" for="j_password">Password : </label>
        <div class="controls">
            <input name="j_password" id="j_password" type="password">
        </div>
    </div>
    <div class="control-group">
        <label class="control-label" for="_spring_security_remember_me">Remember me : </label>
        <div class="controls">
            <input name="_spring_security_remember_me" id="_spring_security_remember_me" type="checkbox" checked="checked">
        </div>
    </div>
    <div class="control-group">
        <div class="controls">
             <input type="submit" class="btn-primary" value="LOGIN"> 
             <input type="reset" class="btn" value="RESET">
         </div>
    </div>
</fieldset>