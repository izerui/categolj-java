<!DOCTYPE logback>
<configuration DEBUG="false">
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <Target>System.out</Target>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern><![CDATA[%d{HH:mm:ss} [%thread] [%-5level] [%-48logger{48}] - %msg%n]]>
            </Pattern>
        </layout>
    </appender>

    <appender name="ROLLING"
        class="ch.qos.logback.core.rolling.RollingFileAppender">
        <Encoding>UTF-8</Encoding>
        <File>log/categolj.log</File>
        <rollingPolicy
            class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>log/categolj-%d{yyyyMMdd}.log
            </FileNamePattern>
            <MaxHistory>2</MaxHistory>
        </rollingPolicy>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern><![CDATA[%d{HH:mm:ss} [%thread] [%-5level] [%-48logger{48}] - %msg%n]]>
            </Pattern>
        </layout>
    </appender>

    <logger name="am.ik.categolj">
        <level value="DEBUG" />
    </logger>

    <logger name="org.springframework.core">
        <level value="WARN" />
    </logger>

    <logger name="org.springframework.beans">
        <level value="WARN" />
    </logger>

    <logger name="org.springframework.context">
        <level value="WARN" />
    </logger>

    <logger name="org.springframework.web">
        <level value="WARN" />
    </logger>

    <logger name="org.springframework.web.servlet">
        <level value="INFO" />
    </logger>

    <logger name="org.springframework.security.core.userdetails">
        <level value="DEBUG" />
    </logger>

    <logger name="com.google.code.morphia">
        <level value="DEBUG" />
    </logger>

    <logger
        name="am.ik.categolj.app.common.interceptor.TraceLogginInterceptor">
        <level value="TRACE" />
    </logger>

    <root>
        <level value="WARN" />
        <appender-ref ref="STDOUT" />
        <appender-ref ref="ROLLING" />
    </root>
</configuration>